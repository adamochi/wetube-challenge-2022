extends base

block potato
    include partials/pageheader
    div#upload-page
        div#recordDiv
            video#preview(controls)
            button#previewRecBtn See Preview
            button#startRecBtn Start Recording
            button#download Download Recording
        form(method="POST", enctype="multipart/form-data")
            label(for="video") Video File
            input(type="file" name="video" id="video" required accept="video/*")
            label(for="thumb") Thumbnail File
            input(type="file" name="thumb" id="thumb" required accept="image/*")
            input(name="title" placeholder="Title" required type="text" inlength=1 maxlength=80)
            input(name="description" placeholder="Description" required type="text" minlength=2 maxlength=300)
            input(name="hashtags", placeholder="Hashtags, separated by comma.", required, type="text")
            button(type="submit") Upload

block scripts
    script(src="/assets/js/recorder.js")